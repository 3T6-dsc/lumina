
{
  "name": "lumina-browser",
  "version": "1.0.0",
  "main": "main.js",
  "description": "Lumina AI-Powered Web Browser",
  "author": "Lumina Team",
  "scripts": {
    "start": "electron .",
    "build:win": "electron-builder --windows"
  },
  "dependencies": {
    "@google/genai": "^1.35.0",
    "electron-updater": "^6.1.7",
    "lucide-react": "^0.562.0",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "electron": "^31.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.lumina.browser",
    "productName": "Lumina Browser",
    "copyright": "Copyright Â© 2024 Lumina",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "publisherName": "Lumina Digital"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": "always",
      "createStartMenuShortcut": true,
      "shortcutName": "Lumina Browser",
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "uninstallDisplayName": "Lumina Browser",
      "runAfterFinish": true,
      "installerHeaderIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico"
    }
  }
}
